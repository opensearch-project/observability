{
  "template-name": "service-map",
  "version": {
    "integration": "0.1.0",
    "schema": "1.0.0",
    "resource": "^2.6.0"
  },
  "description": "Service Map and Tracing correlations Integration",
  "catalog": "observability",
  "components": [
    "traces,traceGroups,metrics"
  ],
  "collection": [
    {
      "traces": [
        {
          "info": "traces signals",
          "input_type": "traces",
          "dataset": "spans",
          "labels": [
            "traceGroups",
            "traces"
          ],
          "fields-mapping": [
            {
              "template": "data-prepper-traces",
              "fields": [
                {
                  "alias": "attributes.serviceName",
                  "field": "serviceName"
                },
                {
                  "alias": "events.@timestamp",
                  "field": "events.time"
                }
              ]
            },
            {
              "template": "jaeger-traces",
              "fields": [
                {
                  "alias": "attributes.serviceName",
                  "field": "serviceName"
                },
                {
                  "alias": "events.@timestamp",
                  "field": "events.time"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "services": [
        {
          "info": "service map",
          "input_type": "services",
          "dataset": "service",
          "labels": [
            "services"
          ]
        }
      ]
    },
    {
      "metrics": [
        {
          "info": "status metrics",
          "input_type": "metrics",
          "dataset": "metrics",
          "labels": [
            "metrics"
          ]
        }
      ]
    }
  ],
  "repository": {
    "url": "https://github.com/opensearch-project/observability/tree/main/integrarions/service-map"
  }
}

